  font-size: clamp(.95rem, .9rem + .3vw, 1.05rem);
}
.hero__icon { margin-bottom: .25rem; }

/* === ESTRELAS: brilho pulsante (1,3,5 mais forte) === */
.stars{ display:inline-flex; gap:.18rem; line-height:1; font-size:1.15rem; }
.stars--lg{ font-size:clamp(1.4rem, 1rem + 1.6vw, 2rem); }

.star{ color:#fbbf24; text-shadow:0 0 8px rgba(251,191,36,.55); animation: shine-dim 2.4s ease-in-out infinite; }
.star.strong{ animation: shine-strong 2.4s ease-in-out infinite; }

/* delays diferentes p/ parecer natural */
.stars .star:nth-child(1){ animation-delay: .0s; }
.stars .star:nth-child(2){ animation-delay: .2s; }
.stars .star:nth-child(3){ animation-delay: .1s; }
.stars .star:nth-child(4){ animation-delay: .3s; }
.stars .star:nth-child(5){ animation-delay: .15s; }
.stars--lg .star:nth-child(1){ animation-delay: .05s; }
.stars--lg .star:nth-child(2){ animation-delay: .25s; }
.stars--lg .star:nth-child(3){ animation-delay: .15s; }
.stars--lg .star:nth-child(4){ animation-delay: .35s; }
.stars--lg .star:nth-child(5){ animation-delay: .2s; }

@keyframes shine-strong {
  0%,100% { transform: scale(1);   filter: brightness(1.1); }
  50%     { transform: scale(1.1); filter: brightness(2);   }
}
@keyframes shine-dim {
  0%,100% { transform: scale(1);   filter: brightness(1);   }
  50%     { transform: scale(1.05);filter: brightness(1.5); }
}

