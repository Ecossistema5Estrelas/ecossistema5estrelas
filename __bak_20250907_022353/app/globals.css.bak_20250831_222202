  color: #fff;
  font-weight: 800;
  font-size: clamp(1.75rem, 1.5rem + 1.8vw, 2.5rem);
  line-height: 1.1;
  text-shadow: 0 1px 2px rgba(0,0,0,.25);
  margin: 0;
}
