{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/sanity/lib/*": [
        "sanity/lib/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@components/ui/*": [
        "app/components/ui/*"
      ],
      "@components/blog/*": [
        "app/components/blog/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "sanity/lib/**/*.ts",
    "sanity/lib/**/*.tsx",
    ".next/types/**/*.ts",
    "@types",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "sanity/schemas",
    "sanity/schemas/**",
    "sanity/desk",
    "sanity/desk/**",
    "sanity/sanity.config.ts"
  ]
}
