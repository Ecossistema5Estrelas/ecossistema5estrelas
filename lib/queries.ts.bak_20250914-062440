import {groq} from "next-sanity";

export const qAllPosts = groq`*[_type=="post" && defined(slug.current)]|order(publishedAt desc){
  _id, title, "slug": slug.current, excerpt, publishedAt
}`;

export const qPostBySlug = groq`*[_type=="post" && slug.current==$slug][0]{
  _id, title, excerpt, publishedAt, content, "slug": slug.current,
  author->{name}
}`;


